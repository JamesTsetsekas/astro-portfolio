---
// @ts-ignore
import { Icon } from "astro-icon";
---

<style>
  #jstoggle,
  #phptoggle,
  #wptoggle,
  #csstoggle,
  #devopstoggle,
  #ecommercetoggle {
    cursor: pointer;
  }
  #jstoggle:hover,
  #phptoggle:hover,
  #wptoggle:hover,
  #csstoggle:hover,
  #devopstoggle:hover,
  #ecommercetoggle:hover {
    color: rgba(255, 255, 255, 1);
    background-color: rgba(0, 0, 0, 0.75);
  }
  #techToggles .active {
    color: rgba(255, 255, 255, 1);
    background-color: rgba(0, 0, 0, 0.75);
  }
</style>

<div class="mt-24">
  <h2 class="pt-6 text-center text-grey-950">I ðŸ§¡ Working with Technology</h2>
  <h3 class="text-center text-sm text-grey-500">Tap one:</h3>
  <div
    id="techToggles"
    class="flex gap-6 md:gap-6 items-center justify-center mt-10 flex-wrap ">
    <div
      id="jstoggle"
      class="p-4 flex flex-col items-center justify-center rounded-lg tech-toggle">
      <Icon class="h-8 md:h-12 ml-5 mr-5" name="simple-icons:javascript" />
      <span>JavaScript</span>
    </div>

    <div
      id="phptoggle"
      class="p-4 flex flex-col items-center justify-center rounded-lg tech-toggle">
