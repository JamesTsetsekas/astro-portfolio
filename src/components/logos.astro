<script>
function hideAll() {
  const relatedItems = document.querySelectorAll('.related-items');
  relatedItems.forEach(item => {
    item.classList.remove('active');
    item.style.display = "none";
  });
}

function showRelatedItems(id, toggleId) {
  hideAll();
  const relatedItems = document.getElementById(id);
  relatedItems.classList.add('active');
  relatedItems.style.display = "flex";
  document.getElementById(toggleId).classList.add('active');
}

function setupToggleClickEvent(toggleId, relatedItemId) {
  document.getElementById(toggleId).onclick = function() {
    showRelatedItems(relatedItemId, toggleId);
  };
}

setupToggleClickEvent('jstoggle', 'js-related-items');
setupToggleClickEvent('phptoggle', 'php-related-items');
setupToggleClickEvent('wptoggle', 'wp-related-items');
setupToggleClickEvent('csstoggle', 'css-related-items');
setupToggleClickEvent('devopstoggle', 'devops-related-items');
setupToggleClickEvent('ecommercetoggle', 'ecommerce-related-items');

</script>
